<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#243278">

    <!-- Return -->
    <TextView
        android:id="@+id/returnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt; Return"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp" />

    <!-- Box containing both paragraph and footer -->
    <LinearLayout
        android:id="@+id/textBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/returnText"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/textbox_background"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- About Us Paragraph -->
        <TextView
            android:id="@+id/aboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="At Elevare Studio, we believe every project is an opportunity to inspire, challenge, and entertain.\nFounded by passionate young minds driven by creativity and innovation, we strive to bring ideas to life through engaging and memorable experiences.\nOur mission is to develop innovative digital experiences that bring people together, ignite curiosity, and make a lasting impression.\nWe are committed to excellence, originality, and delivering products that stand out in quality and purpose."
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8dp"
            android:layout_marginBottom="40dp" />

        <!-- Footer inside box -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by Elevare Studio"
            android:textColor="#FFD700"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</RelativeLayout>
